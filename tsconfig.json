{
	"extends": "@itsmapleleaf/configs/tsconfig.bundler.json",
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"checkJs": false,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"convex/*": ["./convex/*"]
		}
	},
	"exclude": [
		"node_modules",
		"build",
		"public/build",
		"convex/_generated",
		"app"
	]
}
