{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useGroupedTypeImport": "warn",
				"useHookAtTopLevel": "error"
			}
		}
	},
	"formatter": {
		"formatWithErrors": true
	},
	"files": {
		"ignore": [".vercel", "convex/_generated", "dist"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
