{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [
			"node_modules/**",
			"dist/**",
			"convex/_generated/**",
			"build/**",
			"public/build/**"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn",
				"useHookAtTopLevel": "error",
				"useExhaustiveDependencies": "error"
			},
			"suspicious": {
				"noConsoleLog": "warn",
				"noEmptyInterface": "off"
			},
			"nursery": {
				"useGroupedTypeImport": "warn"
			},
			"style": {
				"noNegationElse": "warn",
				"useSingleCaseStatement": "warn",
				"noUnusedTemplateLiteral": "off"
			}
		}
	},
	"formatter": {
		"enabled": false
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
