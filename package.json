{
	"type": "module",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"codegen": "wireit",
		"dev": "wireit",
		"build": "wireit",
		"preview": "wireit",
		"lint": "wireit",
		"format": "biome check --apply .",
		"format-unsafe": "biome check --apply-unsafe .",
		"validate-env": "tsx scripts/validate-env.ts"
	},
	"wireit": {
		"dev": {
			"dependencies": ["dev:vite", "dev:convex"]
		},
		"dev:vite": {
			"command": "vite dev",
			"service": true
		},
		"dev:convex": {
			"command": "convex dev",
			"service": true
		},
		"build": {
			"command": "vite build",
			"dependencies": ["codegen"],
			"files": [
				"index.html",
				"src",
				"public",
				"convex/_generated",
				"vite.config.ts",
				"tailwind.config.ts",
				"postcss.config.cjs"
			],
			"output": ["dist"]
		},
		"lint": {
			"command": "echo lint",
			"dependencies": ["lint:biome", "typecheck"],
			"env": {
				"WIREIT_FAILURES": "continue"
			}
		},
		"lint:biome": {
			"command": "biome check .",
			"files": [
				"**/*.{js,cjs,mjs,ts,tsx,json}",
				"!{node_modules,dist,convex/_generated}"
			],
			"output": []
		},
		"lint:eslint": {
			"command": "eslint . --report-unused-disable-directives",
			"files": [
				"**/*.{js,cjs,mjs,ts,tsx}",
				"!{node_modules,dist,convex/_generated}"
			],
			"output": []
		},
		"typecheck": {
			"command": "tsc -b",
			"dependencies": ["codegen"],
			"files": [
				"**/*.{js,cjs,mjs,ts,tsx}",
				"!{node_modules,dist,convex/_generated}"
			],
			"output": []
		},
		"preview": {
			"command": "vite preview",
			"dependencies": ["build"]
		},
		"codegen": {
			"command": "convex codegen",
			"files": ["convex", "!convex/_generated"],
			"output": ["convex/_generated"]
		}
	},
	"dependencies": {
		"@clerk/clerk-react": "4.24.0",
		"@fontsource-variable/rubik": "5.0.10",
		"@radix-ui/react-dropdown-menu": "2.0.5",
		"@radix-ui/react-popover": "1.0.6",
		"@radix-ui/react-slot": "1.0.2",
		"fast-deep-equal": "3.1.3",
		"history": "5.3.0",
		"lru-cache": "10.0.1",
		"lucide-react": "0.272.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-expanding-textarea": "2.3.6",
		"react-virtuoso": "4.5.0",
		"spin-delay": "1.2.0",
		"tailwind-merge": "1.14.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.0.0",
		"@tailwindcss/container-queries": "0.1.1",
		"@total-typescript/ts-reset": "0.5.1",
		"@types/node": "20.5.7",
		"@types/react": "18.2.21",
		"@types/react-dom": "18.2.7",
		"@typescript-eslint/eslint-plugin": "6.5.0",
		"@typescript-eslint/parser": "6.5.0",
		"@vitejs/plugin-react": "4.0.4",
		"autoprefixer": "10.4.15",
		"chalk": "5.3.0",
		"convex": "1.1.1",
		"eslint": "8.48.0",
		"eslint-plugin-react-hooks": "4.6.0",
		"husky": "8.0.3",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.29",
		"randimals": "2.0.3",
		"tailwindcss": "3.3.3",
		"tsx": "3.12.7",
		"typescript": "5.2.2",
		"vite": "4.4.9",
		"vite-tsconfig-paths": "4.2.0",
		"wireit": "0.10.0"
	},
	"pnpm": {
		"patchedDependencies": {
			"randimals@2.0.3": "patches/randimals@2.0.3.patch"
		}
	},
	"eslintConfig": {
		"root": true,
		"extends": ["plugin:react-hooks/recommended"],
		"parser": "@typescript-eslint/parser",
		"plugins": ["@typescript-eslint"],
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module",
			"ecmaFeatures": {
				"jsx": true
			}
		},
		"overrides": [
			{
				"files": ["*.{ts,tsx}"]
			}
		],
		"ignorePatterns": ["node_modules", "dist", "convex/_generated"]
	}
}
