{
	"name": "game-of-arte",
	"type": "module",
	"private": true,
	"scripts": {
		"codegen": "convex codegen",
		"dev": "pnpm run --parallel /^dev:/",
		"dev:vite": "vite dev",
		"dev:convex": "convex dev",
		"build": "vite build && vite build --ssr",
		"start": "remix-serve build/index.js",
		"lint": "biome check .",
		"typecheck": "tsc -b",
		"test": "vitest run",
		"knip": "knip",
		"e2e": "playwright test",
		"e2e-dev": "playwright test --ui",
		"seed": "convex run seed:run",
		"format": "run-s --continue-on-error format:*",
		"format:biome": "biome check . --apply",
		"format:prettier": "prettier --write --cache --list-different .",
		"fix": "run-s --continue-on-error lint-apply format typecheck test",
		"fix-unsafe": "run-s --continue-on-error lint-apply-unsafe format typecheck test"
	},
	"dependencies": {
		"@ariakit/react": "0.3.8",
		"@clerk/remix": "3.1.9",
		"@fontsource-variable/rubik": "5.0.20",
		"@radix-ui/react-dialog": "1.0.5",
		"@radix-ui/react-dropdown-menu": "2.0.6",
		"@radix-ui/react-popover": "1.0.7",
		"@radix-ui/react-scroll-area": "1.0.5",
		"@radix-ui/react-slot": "1.0.2",
		"@radix-ui/react-tooltip": "1.0.7",
		"@remix-run/node": "2.3.1",
		"@remix-run/react": "2.3.1",
		"@remix-run/serve": "2.3.1",
		"@vercel/remix": "2.3.1",
		"@vercel/speed-insights": "1.0.1",
		"convex": "1.6.3",
		"isbot": "3.7.1",
		"lucide-react": "0.294.0",
		"match-sorter": "6.3.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-expanding-textarea": "2.3.6",
		"react-virtuoso": "4.6.2",
		"svix": "1.15.0",
		"tailwind-merge": "2.1.0",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.4.1",
		"@itsmapleleaf/configs": "github:itsMapleLeaf/configs",
		"@playwright/test": "1.40.1",
		"@remix-run/dev": "2.3.1",
		"@total-typescript/ts-reset": "0.5.1",
		"@types/lodash-es": "4.17.12",
		"@types/node": "20.10.4",
		"@types/react": "18.2.43",
		"@types/react-dom": "18.2.17",
		"autoprefixer": "10.4.16",
		"dotenv": "16.3.1",
		"knip": "3.7.0",
		"lodash-es": "4.17.21",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.32",
		"prettier": "3.1.0",
		"prettier-plugin-jsdoc": "1.1.1",
		"prettier-plugin-tailwindcss": "0.5.9",
		"randimals": "2.0.3",
		"tailwindcss": "3.3.6",
		"tailwindcss-animate": "1.0.7",
		"typescript": "5.3.3",
		"vite": "5.0.7",
		"vite-tsconfig-paths": "4.2.2",
		"vitest": "1.0.3"
	},
	"pnpm": {
		"patchedDependencies": {
			"randimals@2.0.3": "patches/randimals@2.0.3.patch"
		}
	},
	"resolutions": {
		"@remix-run/server-runtime": "2.3.1"
	}
}
