{
	"type": "module",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"codegen": "wireit",
		"dev": "wireit",
		"build": "wireit",
		"preview": "wireit",
		"lint": "biome check .",
		"lint-apply": "biome check . --apply",
		"lint-apply-unsafe": "biome check . --apply-unsafe",
		"typecheck": "wireit",
		"format": "prettier --write --cache --list-different .",
		"validate-env": "tsx scripts/validate-env.ts"
	},
	"wireit": {
		"dev": {
			"dependencies": [
				"dev:vite",
				"dev:convex"
			]
		},
		"dev:vite": {
			"command": "vite dev",
			"service": true
		},
		"dev:convex": {
			"command": "convex dev",
			"service": true
		},
		"build": {
			"command": "vite build",
			"dependencies": [
				"codegen"
			],
			"files": [
				"package.json",
				"index.html",
				"src",
				"public",
				"convex/_generated",
				"vite.config.ts",
				"tailwind.config.ts",
				"postcss.config.cjs"
			],
			"output": [
				"dist"
			]
		},
		"typecheck": {
			"command": "tsc -b",
			"dependencies": [
				"codegen"
			]
		},
		"preview": {
			"command": "vite preview",
			"dependencies": [
				"build"
			]
		},
		"codegen": {
			"command": "convex codegen",
			"files": [
				"convex",
				"!convex/_generated"
			],
			"output": [
				"convex/_generated"
			]
		}
	},
	"dependencies": {
		"@clerk/clerk-react": "4.27.2",
		"@fontsource-variable/rubik": "5.0.19",
		"@radix-ui/react-dialog": "1.0.5",
		"@radix-ui/react-dropdown-menu": "2.0.6",
		"@radix-ui/react-popover": "1.0.7",
		"@radix-ui/react-slot": "1.0.2",
		"convex": "1.5.1",
		"fast-deep-equal": "3.1.3",
		"history": "5.3.0",
		"lru-cache": "10.0.1",
		"lucide-react": "0.292.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-expanding-textarea": "2.3.6",
		"react-virtuoso": "4.6.2",
		"spin-delay": "1.2.0",
		"tailwind-merge": "2.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.3.3",
		"@itsmapleleaf/configs": "github:itsMapleLeaf/configs",
		"@total-typescript/ts-reset": "0.5.1",
		"@types/node": "20.8.10",
		"@types/react": "18.2.35",
		"@types/react-dom": "18.2.14",
		"@vitejs/plugin-react": "4.1.1",
		"autoprefixer": "10.4.16",
		"chalk": "5.3.0",
		"husky": "8.0.3",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.31",
		"prettier": "3.0.3",
		"prettier-plugin-jsdoc": "1.1.1",
		"prettier-plugin-tailwindcss": "0.5.6",
		"randimals": "2.0.3",
		"tailwindcss": "3.3.5",
		"tsx": "3.14.0",
		"typescript": "5.2.2",
		"vite": "4.5.0",
		"vite-tsconfig-paths": "4.2.1",
		"wireit": "0.14.1"
	},
	"pnpm": {
		"patchedDependencies": {
			"randimals@2.0.3": "patches/randimals@2.0.3.patch"
		}
	}
}
